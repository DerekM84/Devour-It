<div class="header">
  <h1>The Dinner Bell</h1>
  <h2>Order your burger!</h2>
</div>
<div class="top-row">
  <form class="create-form">

    <div class="form-group">
      <label for="devour-add"></label>
      <input placeholder="Name of your burger?" class="design-text" type="text" id="devour-add" name="name">
    </div>

    <div class="form-group">
      <label for="devoured"></label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Un-Devoured
    </div>

    <button type="submit">Cook the Burg</button>
  </form>

</div>
<div class="bottom-row">

  <div class="left">
    <h2>Burgers to Eat</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>
  <div class="right">
    <h2>Burgers That You Ate:</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{>  burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>